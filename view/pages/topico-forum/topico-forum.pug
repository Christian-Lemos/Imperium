    h1.imperium-title 
    #mensagens-conteudo
    #paginacao-topico-forum
    .container-fluid#conteiner-adicionar-mensagem(style = 'display:none').imperium-gradient-background-medium
      .row
        .col-md-12
          h2 Postar Mensagem
          form(onsubmit='return false')#form-inserir-mensagem-forum
