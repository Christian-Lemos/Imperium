      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            h4.modal-title Editar mensagem
          .modal-body
            .container-fluid
              .row
                form(onsubmit='return false')#form-editar-mensagem-topico
                  input(type="hidden", name="id" val ="").imperium-input#form-editar-mensagem-topico-id
                  textarea(name='conteudo', placeholder='Digite sua mensagem...', rows='5' style = "resize:vertical", required).imperium-input.form-control#form-editar-mensagem-topico-conteudo
