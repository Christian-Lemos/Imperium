#modal-enviar-mensagem-privada.modal.fade(role='dialog').imperium-modal
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal') ×
                h4.modal-title Enviar mensagem para 
                    span
            .modal-body(style = 'overflow:scroll')
                .row
                    .col-md-offset-1.col-md-10.col-sm-12
                        form#form-enviar-mensagem-privada(onsubmit='return false')
                            input(type="hidden", name="destinatario")
                            .form-group
                                label(for='assunto').imperium-label Assunto: 
                                input.form-control(type='text', name='assunto', placeholder='O assunto da mensagem').imperium-input
                            .form-group
                                label(for='mensagem').imperium-label Mensagem: 
                                textarea(name='mensagem' rows = '10' style = "resize: vertical; width:100%").form-control.imperium-input
                            .row
                                .col-md-offset-3.col-md-6.text-center
                                    button.btn.btn-primary.btn-lg.btn-block(type='submit').imperium-input Enviar Mensagem

