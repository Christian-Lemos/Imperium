doctype html
html
  head
    title Redefinir Senha
    meta(charset = "UTF-8")
    meta(name = "viewport", content = "width=device-width, initial-scale=1")
    meta(http-equiv = "X-UA-Compatible", content = "IE=edge")
    meta(name = "author" content = "Christian Lemos")
    link(rel = "icon", href = "/images/logo_pre.png")
    script(src="js/dist/bundle.general.js")
  body
    section#esqueci-main
      .container.imperium-modal
        .row.modal-content
          .col-md-12
            -if(erro == 0)
              div#esqueci-titulo 
                h1 Redefinir Senha
              form#esqueci-form(onsubmit='return false')
                input(type='hidden', name='chave', value='' + chave)
                input(type='hidden', name='id', value='' + u)
                .form-group
                  label(for='novasenha').imperium-label Sua nova senha:
                  input#novasenha.form-control.form-senha(type='password', name='senha', placeholder='********', required='').imperium-input
                .form-group
                  label(for='confsenha').imperium-label Confirmação da nova senha:
                  input#confsenha.form-control(type='password', name='confsenha', placeholder='********', required='').imperium-input
                span.form-aviso
                .row
                  .col-md-3
                  .col-md-6.text-center
                    button#loginFormButton.btn.btn-success.btn-lg.btn-block(type='submit').imperium-input Redefinir senha
            -else if(erro == 1)
              .div-erro
                img(src="/images/warning.png", alt="Erro").img-responsive
                p.texto-erro Link inválido.
            -else if(erro == 2)
              .div-erro
                img(src="/images/warning.png", alt="Erro").img-responsive
                p.texto-erro Este link não é mais válido. Requisite novamente.
      script.
        erro = !{erro}
      script(src="js/dist/pages/recuperar-senha.bundle.js")
            
      
      