extends ../../templates/layout
block titulo
  | Planeta
block content  
    .container-fluid
        .row
            h1.imperium-title Recursos
            #edificio-ferro.col-md-12.edificio(data-edificio = 'minaFerro')
                .col-md-2.edificio-img
                    img(src='/images/mina-ferro.jpg')
                .col-md-6.edificio-desc
                    .edificio-desc-titulo
                        h4 Mina de ferro
                        span Nível:  
                            span.edificio-nivel
                    div
                        span Custo para o nível 1:
                        .imperium-resource-list 
                            div.custo-ferro
                                .imperium-resource.imperium-resource-iron
                                span 300
                            div.custo-cristal
                                .imperium-resource.imperium-resource-cristal
                                span 300
                        div(style="clear:both")
                            span.edificio-tempo-melhoria-antes Tempo de melhoria: 
                                span
                                |  Segundos
               
                        span Diferença em produção com melhoria: 
                            b
                                span.edificio-melhoria-producao.text-success
                        br
                        
                        button.btn-ugrade-edificio.btn.btn-success.btn-sm.btn-block.imperium-input(style="margin-top:20px") Melhorar
                        span(style = "display: block").edificio-tempo-melhoria-depois.hidden Tempo de melhoria:
                            span
                        button.btn-calcelar-melhoria.btn.btn-warning.btn-sm.hidden.btn-block.imperium-input(style="margin-top:10px") Calcelar Melhoria
