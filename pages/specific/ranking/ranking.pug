extends ../../templates/layout
block titulo
  | Ranking
block content     
  .container
    h1.imperium-title Classificação
    .row
      button(type="button", data-tipo = "pontosTotal").btn.btn-warning.btn-pontos.active Pontuação total
      button(type="button", data-tipo = "pontosEconomia").btn.btn-primary.btn-pontos Pontuação Econômica
      button(type="button", data-tipo = "pontosMilitar").btn.btn-danger.btn-pontos Pontuação Militar
      button(type="button", data-tipo = "pontosPesquisa").btn.btn-success.btn-pontos Pontuação de pesquisa
    .row
      .col-md-12
        br
        .table-responsive
          table.table.table-bordered.imperium-table.imperium-table-background
            thead
              tr
                th Rank
                th Nickname
                th Aliança
                th Ação
                th Pontos
            tbody#conteudo-ranking
      .paginacao.pagination

  include ../../templates/enviar-mensagem-privada

block posscripts

  script(src="js/dist/pages/ranking.bundle.js")